<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:columnCount="6"
    android:padding="4dp"
    android:rowCount="4"
    >
    <ImageView
        android:id="@+id/bluetooth_image"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:src="@drawable/wifi_icon"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_rowSpan="4"
        android:scaleType="fitCenter"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/rssi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="center_horizontal|fill"
        android:layout_marginLeft="5dp"

        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:layout_row="1"
        android:text="RSSI"
        android:textSize="11dp"/>

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"

        android:layout_columnWeight="1"
        android:layout_gravity="center_horizontal|fill"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"

        android:layout_marginTop="2dp"
        android:layout_row="1"
        android:text="Immediate"
        android:textSize="12dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_column="3"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal|center_horizontal"
        android:layout_margin="2dp"

        android:layout_row="0"

        android:text="Tx"
        android:textSize="11dp"/>

    <TextView
        android:id="@+id/uuid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_column="4"
        android:layout_columnSpan="2"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal|center_horizontal"
        android:layout_margin="2dp"

        android:layout_row="2"

        android:text="UUID"
        android:textSize="11dp"/>
    <!-- zweite/dritte Zeile-->
    <TextView
        android:id="@+id/rssi_dbm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_row="2"
        android:layout_rowSpan="2"
        android:text="-00 dBm"
        android:textSize="22dp"/>

    <TextView
        android:id="@+id/tx_dbm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="2dp"

        android:layout_row="1"
        android:text="unknown"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/uuid_num"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_column="4"
        android:layout_columnSpan="2"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_margin="2dp"
        android:layout_row="3"
        android:text="unknown"
        android:textSize="16dp"/>
    <!--dritte Zeile-->
    <TextView
        android:id="@+id/dist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_marginBottom="2dp"

        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:layout_row="2"
        android:text="Distance"
        android:textSize="11dp"/>

    <TextView
        android:id="@+id/major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="4"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="2dp"

        android:layout_row="0"
        android:text="Major"
        android:textSize="11dp"/>

    <TextView
        android:id="@+id/minor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="5"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="2dp"

        android:layout_row="0"
        android:text="Minor"
        android:textSize="11dp"/>
    <!--vierte Zeile-->
    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal|center_horizontal"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:layout_row="0"
        android:singleLine="false"
        android:text="unknown"
        android:textSize="11dp"/>

    <TextView
        android:id="@+id/dist_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:layout_row="3"
        android:text="unknown"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/maj_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="4"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="2dp"
        android:layout_row="1"
        android:text="unknown"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/min_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="5"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="2dp"
        android:layout_row="1"
        android:text="unknown"
        android:textSize="16dp"/>


</GridLayout>