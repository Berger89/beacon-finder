<HorizontalScrollView android:id="@+id/hsv"
                      xmlns:android="http://schemas.android.com/apk/res/android"
                      xmlns:custom="http://schemas.android.com/apk/res-auto"

                      xmlns:tools="http://schemas.android.com/tools"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_alignParentTop="true"
                      android:fillViewport="true"
                      android:measureAllChildren="false"
                      android:scrollbars="none">

    <AbsoluteLayout
        android:layout_width="360dp"
        android:layout_height="400dp">

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/custView4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_x="102dp"
            android:layout_y="98dp"
            android:layout_marginLeft="180dp"
            android:background="@drawable/location_icon"/>

        <beaconfinder.fun.berger.de.beaconfinder.util.LovelyView
            android:id="@+id/custView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_x="0dp"
            android:layout_y="360dp"
            custom:circleColor="#6C7B8B"
            custom:circleLabel="87/61738"
            custom:labelColor="#FFF"/>

        <beaconfinder.fun.berger.de.beaconfinder.util.LovelyView
            android:id="@+id/custView2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_x="0dp"
            android:layout_y="0dp"
            custom:circleColor="#6C7B8B"
            custom:circleLabel="24/22613"
            custom:labelColor="#FFF"/>

        <beaconfinder.fun.berger.de.beaconfinder.util.LovelyView
            android:id="@+id/custView3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_x="330dp"
            android:layout_y="360dp"

            custom:circleColor="#6C7B8B"
            custom:circleLabel="87/60330"
            custom:labelColor="#FFF"/>
    </AbsoluteLayout>

</HorizontalScrollView>